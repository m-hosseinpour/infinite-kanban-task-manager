# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
tab_width = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = crlf
max_line_length = 120

[*.{ts,tsx,js,coffee,json,yml,css,scss,sh,markdown,md,html}]
indent_size = 2

[*.txt]
indent_style = tab
indent_size = 4

[*.{diff,md}]
trim_trailing_whitespace = false
